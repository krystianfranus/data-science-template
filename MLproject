name: multistep_example

conda_env: conda.yaml

entry_points:
  preprocess:
    parameters:
      split_ratio: {type: int, default: 0.7}
    command: "python preprocess.py split_ratio={split_ratio}"

  train:
    parameters:
      train_path: path
      test_path: path
      n_steps: {type: int, default: 200}
      lr: {type: float, default: 0.01}
    command: "python train.py train_path={train_path} test_path={test_path} n_steps={n_steps} lr={lr}"

  main:
    parameters:
      split_ratio: {type: int, default: 0.7}
      n_steps: {type: int, default: 200}
      lr: {type: float, default: 0.01}
    command: "python main.py split_ratio={split_ratio} n_steps={n_steps} lr={lr}"
